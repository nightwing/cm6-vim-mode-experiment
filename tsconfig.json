{
    "compilerOptions": {
        // "module": "commonjs",
        "noImplicitAny": false,
        // "noEmit": true,
        // "declaration": false,
        // "lib": ["es2019", "DOM"]
        "outDir": "./dist",
        "allowJs": true,
        "checkJs": true,
        "lib": ["es6", "dom", "scripthost"],
        "types": ["mocha"],
        "stripInternal": true,
        "typeRoots": ["./node_modules/@types"],
        "noUnusedLocals": true,
        "strict": true,
        "target": "es6",
        "module": "es2020",
        "newLine": "lf",
        "moduleResolution": "node",
    },
    "include": [
        "src/*.ts",
        "src/*.js"
    ]
}
